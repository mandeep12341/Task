<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-body">
            <% if @blog.avatar.attached? %>
              <div class="text-center mb-3">
                <img src="<%= url_for(@blog.avatar) %>" class="img-fluid">
              </div>
            <% end %>
            <h5 class="card-title"><%= @blog.title %></h5>
            <p>
              <strong>Blog-ID:</strong>
              <%= @blog.id %>
            </p>
            <p>
              <strong>Description:</strong>
              <%= @blog.description %>
            </p>

            <h5>Comments:</h5>

            <% if @blog.comments.present? %>
              <% @blog.comments.each do |comment| %>
                <div class="card-body">
                  <h5 class="card-title"><%= comment.paragraph %></h5>
                </div>
              <% end %>
            <% else %>
              <p>No Comments found.</p>
            <% end %>
            
            <%= link_to "Home", root_path, class: "btn btn-primary mt-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
